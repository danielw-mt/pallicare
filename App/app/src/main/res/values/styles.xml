<resources>

    <!--Modifications for all Components like Buttons, FABs, etc -->
    <style name="PalliCare.CardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/defaultMargin</item>
        <item name="cardCornerRadius">@dimen/defaultCardCornerRad</item>
        <item name="cardElevation">@dimen/defaultCardElevation</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="PalliCare.Button" parent="@style/Widget.AppCompat.Button">
        <!--        the background color is automatically set to color_primary-->
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/color_on_primary</item>
        <item name="android:layout_margin">@dimen/defaultMargin</item>
        <item name="android:textAppearance">@style/TextAppearance.PalliCare.Button</item>
        <item name="android:padding">@dimen/middlePadding</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="PalliCare.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>
        <item name="android:paddingLeft">@dimen/defaultPadding</item>
        <item name="android:paddingRight">@dimen/defaultPadding</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.PalliCare.TextView.Normal</item>
    </style>

    <style name="PalliCare.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint">@color/color_on_primary</item>
    </style>

    <style name="PalliCare.Toolbar" parent="Theme.AppCompat">

        <!-- colorControlNormal Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/color_surface</item>

        <!-- colorControlActivated applies to views in their activated state (i.e checked or switches) -->
        <item name="android:background">@color/color_primary_variant</item>

        <!-- colorAccent tints the input fields like checkboxes and text fields -->
        <!-- colorControlHighlight Applied to framework control highlights (i.e ripples or list selectors) -->
    </style>

    <style name="PalliCare.ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/color_on_background</item>
        <item name="android:progressTint">@color/color_primary</item>
        <item name="android:layout_height">20dp</item>
    </style>

</resources>
